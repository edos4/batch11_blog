<p id="notice"><%= notice %></p>
<% if false%>
  <h1>Games</h1>
<% end %>
<%= @sum %>

<%= @arr[1] %>
<%= render 'header'%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.genre %></td>
        <td><%= game.price %></td>
        <td><%= game.platform %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
