<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>ID</th>
      <th>Name</th>
      <th>Class</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% ctr = 1 %>
    <% @articles.each do |article| %>
      <tr>
        <td><%= ctr %></td>
        <td><%= article.id %></td>
        <td><%= link_to article.name, article %> </td>
        <td><%= "Yo" %></td>
        <td><%= article.body %></td>
      </tr>
      <% ctr += 1 %>
    <% end %>
  </tbody>
</table>
